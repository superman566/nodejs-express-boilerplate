{
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*"], // Include the src folder for compilation
	"exclude": [
		"node_modules",
		"src/**/__tests__/**/*",
		"src/**/*.spec.*",
		"src/**/*.test.*"
	]
}
